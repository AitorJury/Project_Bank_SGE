<odoo>
    <data>
        <record model="ir.ui.view" id="movement_tree_view">
            <field name="name">g3_bank.movement.tree</field>
            <field name="model">g3_bank.movement</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="account_id"/>
                    <field name="timestamp"/>
                    <field name="name"/>
                    <field name="amount"/>
                    <field name="balance"/>
                    <field name="account_type" invisible="1"/> 
                    <field name="credit_limit_info" attrs="{'invisible': [('account_type', '!=', 'CREDIT')]}"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="movement_form_view">
            <field name="name">g3_bank.movement.form</field>
            <field name="model">g3_bank.movement</field>
            <field name="arch" type="xml">
                <form string="Bank Movement">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" attrs="{'readonly': [('id', '!=', False)]}"/>
                                <field name="amount" attrs="{'readonly': [('id', '!=', False)]}"/>
                                <field name="account_id" 
                                       readonly="1" 
                                       force_save="1" 
                                       options="{'no_open': True, 'no_create': True, 'no_quick_create': True}"/>
                                
                                <field name="account_type" invisible="1"/>
                                
                                <field name="credit_limit_info" attrs="{'invisible': [('account_type', '!=', 'CREDIT')]}"/>
                            </group>
                            <group>
                                <field name="timestamp" readonly="1"/>
                                <field name="balance" readonly="1"/>
                                <field name="currency_id" readonly="1"/>
                                <field name="id" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>