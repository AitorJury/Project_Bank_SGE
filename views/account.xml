<odoo>
    <data>
        <record model="ir.ui.view" id="account_tree_view">
            <field name="name">g3_bank.account.tree</field>
            <field name="model">g3_bank.account</field>
            <field name="arch" type="xml">
                <tree 
                    decoration-danger="balance &lt; 0" 
                    decoration-info="typeAccount == 'CREDIT'">
                    <field name="name"/>
                    <field name="typeAccount" 
                           widget="badge" 
                           decoration-success="typeAccount == 'STANDARD'" 
                           decoration-warning="typeAccount == 'CREDIT'"/>
                    <field name="beginBalance" 
                           sum="Total Initial"/>
                    <field name="balance" 
                           sum="Total Balance"/>
                    <field name="creditLine" 
                           attrs="{'invisible': [('typeAccount', '!=', 'CREDIT')]}"/>
                    <field name="beginBalanceTimestamp" widget="date"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="account_form_view">
            <field name="name">g3_bank.account.form</field>
            <field name="model">g3_bank.account</field>
            <field name="arch" type="xml">
                <form string="Account Details">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Ej. Cuenta Corriente Personal"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Información de Cuenta">
                                <field name="typeAccount" widget="radio" options="{'horizontal': true}"/>
                                <field name="beginBalanceTimestamp" readonly="1"/>
                            </group>
                            <group string="Saldos y Límites">
                                <field name="beginBalance"/>
                                <field name="balance" readonly="1"/>
                                <field name="creditLine" attrs="{'invisible': [('typeAccount', '!=', 'CREDIT')], 'required': [('typeAccount', '=', 'CREDIT')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="General Information">
                                <group>
                                </group>
                            </page>
                            <page string="Movements">
                                <header>
                                    <button name="%(g3_movement_action)d"
                                            string="Create Movement"
                                            type="action"
                                            class="oe_highlight"/>
                                </header>
                                <field name="movement_ids" readonly="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
